<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.plastilinapps.berakamusic.Music">

    <fragment
        android:name="fragments.TopListFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/framgent1"
        tools:layout="@layout/fragment_top_list"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <fragment
        android:name="fragments.FriendsFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/framgent2"
        tools:layout="@layout/fragment_friends"
        android:layout_above="@+id/framgent1"
        android:layout_alignStart="@+id/framgent1"
        android:layout_marginBottom="170dp" />

</RelativeLayout>
